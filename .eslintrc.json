{
  "root": true,
  "ignorePatterns": ["!**/*", ".next/**/*"],

  "plugins": [
    "@nx",
    "eslint-plugin-unicorn",
    "no-secrets",
    "promise",
    "@typescript-eslint",
    "import"
  ],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": [
        "**/_components/**/*.{ts,tsx,js,jsx}",
        "**/_features/**/*.{ts,tsx,js,jsx}"
      ], // for components and features
      "rules": {
        "import/no-default-export": "error"
      }
    },
    {
      "files": ["*.jsx", "*.tsx"], // for JSX component
      "excludedFiles": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx",
        "*.cy.ts",
        "*.cy.tsx"
      ],
      "rules": {
        "@nx/workspace/jsx-no-inline-function": "error"
      }
    },
    {
      "files": ["*.jsx", "*.tsx"], // for JSX component
      "excludedFiles": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx",
        "*.cy.ts",
        "*.cy.tsx",
        ""
      ],
      "rules": {
        "@nx/workspace/jsx-no-inline-types": "error"
      }
    },
    {
      "files": ["*.tsx", ".ts", "*.js"], // for process.env
      "rules": {
        "@nx/workspace/environment-key-naming-convention": "error"
      }
    },
    {
      "files": ["*.jsx", "*.tsx"], // for JSX component
      "rules": {
        "unicorn/prefer-module": "off",
        "unicorn/filename-case": [
          "error",
          {
            "case": "pascalCase"
          }
        ],
        "react/function-component-definition": [
          "error",
          {
            "namedComponents": "arrow-function",
            "unnamedComponents": "arrow-function"
          }
        ]
      }
    },
    {
      "files": [
        "*.js",
        "*.ts",
        "**/pages/**/*.tsx",
        "**/pages/**/*.jsx",
        "**/app/**/page.tsx",
        "**/app/**/layout.tsx",
        "**/app/**/template.tsx",
        "**/app/**/loading.tsx",
        "**/app/**/error.tsx",
        "**/app/**/global-error.tsx",
        "**/app/**/not-found.tsx",
        "mdx-components.tsx"
      ], // for other js files & nextjs pages
      "rules": {
        "unicorn/prefer-module": "off",
        "unicorn/filename-case": [
          "error",
          {
            "case": "kebabCase"
          }
        ]
      }
    },
    {
      "files": ["use[A-Z]*.js", "use[A-Z]*.ts"], // for React hooks
      "rules": {
        "unicorn/prefer-module": "off",
        "unicorn/filename-case": [
          "error",
          {
            "case": "camelCase"
          }
        ]
      }
    },
    {
      "files": ["*.native.tsx"],
      "rules": {
        "unicorn/filename-case": [
          "off",
          {
            "case": "pascalCase"
          }
        ]
      }
    },
    {
      "files": ["*.cy.ts", "*.cy.tsx", "*.spec.ts", "*.spec.tsx"],
      "rules": {
        "unicorn/filename-case": [
          "off",
          {
            "case": "kebabCase"
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],
        "camelcase": [
          "error",
          {
            "properties": "always"
          }
        ]
      }
    },
    {
      "files": ["*.tsx"],
      "rules": {
        "complexity": ["error", { "max": 3 }]
      }
    },
    {
      "files": ["*.ts"],
      "rules": {
        "complexity": ["error", { "max": 3 }]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "plugins": ["spellcheck"],
      "rules": {
        "no-unused-vars": [
          "error",
          {
            "vars": "all",
            "args": "after-used",
            "argsIgnorePattern": "^_",
            "ignoreRestSiblings": true
          }
        ],
        "no-magic-numbers": [
          "off",
          {
            "ignore": [],
            "ignoreArrayIndexes": true,
            "enforceConst": true,
            "detectObjects": false
          }
        ],
        "no-secrets/no-secrets": "error",
        "max-lines": ["error", { "max": 160 }],
        "max-nested-callbacks": ["error", 3],
        "max-depth": ["error", 4],
        // https://blog.nrwl.io/mastering-the-project-boundaries-in-nx-f095852f5bf4
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "allow": [],
            "depConstraints": [
              // type rules
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:data-access",
                  "type:util",
                  "type:ui"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:data-access",
                  "type:util",
                  "type:ui"
                ]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": ["type:data-access", "type:util"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util"]
              },
              // plugin rules
              {
                "sourceTag": "plugin:next",
                "onlyDependOnLibsWithTags": [
                  "plugin:next",
                  "plugin:react",
                  "plugin:node",
                  "plugin:js"
                ]
              },
              {
                "sourceTag": "plugin:expo",
                "onlyDependOnLibsWithTags": [
                  "plugin:expo",
                  "plugin:react",
                  "plugin:js"
                ]
              },
              {
                "sourceTag": "plugin:react",
                "onlyDependOnLibsWithTags": ["plugin:react", "plugin:js"]
              },
              {
                "sourceTag": "plugin:express",
                "onlyDependOnLibsWithTags": ["plugin:express", "plugin:js"]
              },
              {
                "sourceTag": "plugin:nest",
                "onlyDependOnLibsWithTags": ["plugin:nest", "plugin:js"]
              },
              // scope rules
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              },
              // app specific rules
              {
                "sourceTag": "scope:int-lms-web",
                "onlyDependOnLibsWithTags": [
                  "scope:int-lms-web",
                  "scope:int-lms-api",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:int-lms-api",
                "onlyDependOnLibsWithTags": [
                  "scope:int-lms-api",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:int-alumnus-portfolio",
                "onlyDependOnLibsWithTags": [
                  "scope:int-alumnus-portfolio",
                  "scope:int-lms-api",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:int-student-detail-microservice",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "**/app/**/page.tsx",
        "**/pages/**/*.tsx",
        "**/api/**/*.ts",
        "**/api/**/*.js"
      ],
      "rules": {
        "@nx/workspace/no-dynamic-routes": [
          "error",
          {
            "allowedServices": [
              "academic-pinebaatars-web",
              "academic-pinebaatars-recruiter-web",
              "academic-enrollment-enrollment-web",
              "universal-dash",
              "operational-assets-management-dash"
            ],
            "exemptPatterns": [
              "**/cypress/**",
              "**/*.test.*",
              "**/*.spec.*",
              "**/node_modules/**"
            ]
          }
        ]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    },
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ]
}
